<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - RSGymPT</title>

    <!-- Bootstrap 4 CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS for page styling -->
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        /* Custom header styling */
        .navbar {
            background-color: #007bff; /* Azul mais vivo para o header */
            padding: 10px 20px;
        }

        .navbar .navbar-brand img {
            max-height: 40px; /* Logo no header */
        }

        .navbar-nav {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .navbar-nav .nav-item {
            padding-left: 20px;
            padding-right: 20px;
            color: white;
        }

        /* Custom hover effect */
        .navbar-nav .nav-item:hover {
            color: #f8f9fa; /* Mudança de cor ao passar o cursor */
            background-color: rgba(255, 255, 255, 0.2); /* Fundo suave */
            border-radius: 5px;
        }

        /* Custom footer styling */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 20px;
            position: fixed;
            bottom: 0;
            width: 100%;
            font-size: 14px;
        }

        .footer .privacy {
            font-size: 12px;
            color: #6c757d;
        }

        /* Adjusting container padding */
        .container {
            margin-top: 20px;
            padding-bottom: 70px; /* Give space for the footer */
        }
    </style>

</head>
<body>

    <!-- Header with Navigation and Logo -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="/">
                <img src="~/favicon.ico" alt="Logo"> <!-- Logo no cabeçalho -->
            </a>
            <div class="navbar-nav w-100 d-flex justify-content-between">
                <!-- Customer link à esquerda -->
                <a class="nav-item nav-link" href="/Customers/Index">Customer</a>

                <!-- Payments link ao centro -->
                <a class="nav-item nav-link" href="/Payments/Index">Payments</a>

                <!-- Privacy link à direita -->
                <a class="nav-item nav-link" href="/Privacy/Index">Privacy</a>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 RSGymPT - Paulo Melo | <span class="privacy">This is a study project</span></p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
